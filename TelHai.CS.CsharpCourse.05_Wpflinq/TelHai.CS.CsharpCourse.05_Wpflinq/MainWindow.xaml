<Window x:Class="TelHai.CS.CsharpCourse._05_Wpflinq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.CS.CsharpCourse._05_Wpflinq"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Name="lbl" Grid.ColumnSpan="2" Content="Songs" FontSize="20px" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="AliceBlue"/>
        
        <StackPanel Background="AliceBlue" Grid.Row="1" Grid.Column="0" >
            <Button Name ="btn3" Margin="5,5,5,0" Content="Load Random 50 songs" Click="BtnLoad_Click"/>
            <Button Name ="btn4" Margin="5,5,5,0" Content="Delete" Click="BtnDelete_Click"/>

            <Separator Margin="0,5"/>

            <TextBlock Text="Add New Song:" Margin="5,0,5,0" FontWeight="Bold"/>
            <TextBox x:Name="txtTitle" Margin="5,5,5,0" Text="Title"/>
            <TextBox x:Name="txtArtist" Margin="5,5,5,0" Text="Artist"/>
            <TextBox x:Name="txtDuration" Margin="5,5,5,0" Text="Duration (1-10)"/>
            <Button Content="Add Song +" Margin="5,5,5,0" Click="BtnAdd_Click"/>

            <Separator Margin="0,5"/>

            <Button Name ="btnSort1" Margin="5,0,5,0" Content="Sort1 by Duration (Up/Down)" Click="BtnSort1_Click"/>
            <Button Name ="btnSort2" Margin="5,5,5,0" Content="Sort2 by Title (Up/Down)" Click="BtnSort2_Click"/>
            <TextBox x:Name="txtSearch" Margin="5,5,5,0" Text="Search"/>
            <Button Name ="btnSearch" Margin="5,5,5,0" Content="Search" Click="BtnSearch_Click"/>
            <Button Name ="btnShortHits" Margin="5,5,5,0" Content="Short Hits" Click="BtnShortHits_Click"/>
            <Button Name="btnGroupBy" Margin="5,5,5,0" Content="Group by Artist" Click="BtnGroupBy_Click"/>
        </StackPanel>
        
        <ListBox  Name="songsListBox" Grid.Column="1" Grid.Row="1" Background="WhiteSmoke"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Background="AliceBlue">
            <TextBlock Text="Total Duration:" FontWeight="Bold" Margin="5,0"/>
            <TextBlock x:Name="txtTotalDuration" Text="0"/>

            <TextBlock Text="Avg Length:" FontWeight="Bold" Margin="15,0,5,0"/>
            <TextBlock x:Name="txtAverageLength" Text="0"/>

            <TextBlock Text="Longest Song:" FontWeight="Bold" Margin="15,0,5,0"/>
            <TextBlock x:Name="txtLongestSong" Text="-"/>
        </StackPanel>
        
    </Grid>
</Window>
